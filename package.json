{
  "name": "sldl-downloader",
  "productName": "SLDL Downloader",
  "version": "2.0.0",
  "description": "Download Spotify playlists via Soulseek with automatic iPod sync",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build-all": "electron-builder --mac --win --linux"
  },
  "author": "Jack M",
  "license": "MIT",
  "build": {
    "appId": "com.jackm.sldl-downloader",
    "files": [
      "**/*",
      "!resources/sldl"
    ],
    "extraResources": [
      {
        "from": "resources/sldl",
        "to": "sldl",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "This app needs to control iTunes/Music to add songs and sync your iPod.",
        "NSSystemAdministrationUsageDescription": "This app needs automation permissions to control iTunes/Music."
      }
    },
    "dmg": {
      "title": "SLDL Downloader",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  }
}
