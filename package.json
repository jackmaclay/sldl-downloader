{
  "name": "sldl-downloader",
  "productName": "SLDL Downloader",
  "version": "1.3.1",
  "description": "Simple GUI for downloading Spotify playlists via Soulseek",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "author": "Jack M",
  "license": "MIT",
  "build": {
    "appId": "com.jackm.sldl-downloader",
    "files": [
      "**/*",
      "!resources/sldl"
    ],
    "extraResources": [
      {
        "from": "resources/sldl",
        "to": "sldl",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": false
    },
    "dmg": {
      "title": "SLDL Downloader",
      "icon": "build/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  }
}